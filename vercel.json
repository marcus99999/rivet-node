{
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "api/data/Master.rivet-project"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "access-control-allow-origin", "value": "*" },
        { "key": "access-control-allow-headers", "value": "authorization" },
        { "key": "access-control-allow-methods", "value": "DELETE, GET, HEAD, OPTIONS, PATCH, POST, PUT" },
      ]
    }
  ]
}